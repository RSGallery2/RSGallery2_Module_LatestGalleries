					name="spacer_divnamecsssize" 
					type="spacer" 
					class="text"
					label="MOD_RSGALLERY2_LATEST_GALLERIES_DIVNAMECSSSIZE_SPACER"
				/>
				
				<field 
					name="divnameheight" 
					type="text" 
					default="0" 
					label="MOD_RSGALLERY2_LATEST_GALLERIES_DIVNAME_HEIGHT" 
					description="MOD_RSGALLERY2_LATEST_GALLERIES_DIVNAME_HEIGHT_DESC" 
				/>
				<!--<field name="divnamewidth" type="text" default="0" label="MOD_RSGALLERY2_LATEST_GALLERIES_DIVNAME_WIDTH" description="MOD_RSGALLERY2_LATEST_GALLERIES_DIVNAME_WIDTH_DESC" />-->
				<field 
					name="filteringspacer4" 
					type="spacer" 
					hr="true" 
					/>
				<field 
					name="displayname" 
					type="radio" 
					class="btn-group btn-group-yesno"
					default="1" 
					label="MOD_RSGALLERY2_LATEST_GALLERIES_DISPLAY_NAME" 
					description="MOD_RSGALLERY2_LATEST_GALLERIES_DISPLAY_NAME_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field 
					name="displaydate" 
					type="radio" default="1" 
					class="btn-group btn-group-yesno"
					label="MOD_RSGALLERY2_LATEST_GALLERIES_DISPLAY_DATE" 
					description="MOD_RSGALLERY2_LATEST_GALLERIES_DISPLAY_DATE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field 
					name="dateformat" 
					type="text" 
					default="d-m-Y" 
					label="MOD_RSGALLERY2_LATEST_GALLERIES_DATE_FORMAT" 
					description="MOD_RSGALLERY2_LATEST_GALLERIES_DATE_FORMAT_DESC">
				</field>
				
				<field 
					name="filteringspacer2" 
					type="spacer" 
					hr="true" 
				/>
			</fieldset>
			
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option value="static"></option>
				</field>
