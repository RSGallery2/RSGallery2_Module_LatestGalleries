	<files>	
		<filename>mod_rsgallery2_latest_galleries.xml</filename>
		<filename module="mod_rsgallery2_latest_galleries">mod_rsgallery2_latest_galleries.php</filename>
		<filename >Rsg2DbSelections.php</filename>
